<!DOCTYPE html>
<%- include('../partials/head') %>
<body>
    <div id="form-content">
        <form action="/api/admins/login" method="post" id="form" class="login" novalidate>
            <div class="msg">
                <h2>Admin Login</h2>
            </div>
            <div class="input-style">
                <input type="email" name="email" id="email" placeholder="Email" required>
                <div class="msgs email-msg"></div>
            </div>
            <div class="input-style">
                <input type="password" name="password" id="password" placeholder="Password" required>
                <i class="fa fa-eye"></i>
                <div class="msgs password-msg"></div>
            </div>
            <div class="btn">
                <div>
                    <input type="submit" value="Login">
                </div>
                <div>
                    <a href="/api/admins/forgotten-password"><input type="button" value="Forgot password?"></a>
                </div>
            </div>
        </form>
    </div>
    
    <%- include('../partials/foot') %>
    <script src="/javascript/admin/login.js"></script>
</body>
</html>