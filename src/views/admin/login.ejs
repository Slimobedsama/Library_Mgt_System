<!DOCTYPE html>
<%- include('../partials/head') %>
<body>
    <div id="form-content">
        <form action="/api/admins/login" method="post" id="form" class="login" novalidate>
            <div class="msg">
                <h2>Admin Login</h2>
            </div>
            <div class="input-style">
                <input type="email" name="email" id="email" placeholder="Email" value="<%= email %>" required>
            </div>
            <div class="input-style">
                <input type="password" name="password" id="password" placeholder="Password" required>
                <i class="fa fa-eye"></i>
            </div>
            <!-- <% if (error && error.length > 0) { %>
                <div class="error-msg"><%= error %></div>
            <% } %> -->
            <div class="btn">
                <div>
                    <input type="submit" value="Login">
                </div>
                <div>
                    <a href="/api/admins/forgotten-password"><input type="button" value="Forgot password?"></a>
                </div>
            </div>
        </form>
    </div>
    
    <%- include('../partials/foot') %>           
    <script id="toast-data" type="application/json">
        <%- JSON.stringify({
            error: error || []
        }) %>
    </script>
    <script src="/javascript/admin/eyeVisibility.js"></script>
    <script src="/javascript/toast.js"></script>
</body>
</html>